{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/env.d.ts",
    "src/renderer/src/**/*",
    "src/shared/**/*",
    "src/preload/*.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",   
    "baseUrl": "./src/renderer/src",
    "paths": {
      "@app/*": ["app/*"],
      "@pages/*": ["pages/*"],
      "@widgets/*": ["widgets/*"],
      "@features/*": ["features/*"],
      "@entities/*": ["entities/*"],
      "@shared/*": ["shared/*"],
    },
  }
}
