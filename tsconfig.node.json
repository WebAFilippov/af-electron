{
  "extends": ["@electron-toolkit/tsconfig/tsconfig.node.json"],
  "include": ["electron.vite.config.*", "src/main/**/*"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": "./src/main",
    /* Alias */
    "paths": {
      "@/*": ["/*"],
      "@app/*": ["app/*"],
      "@ipc/*": ["ipc/*"],
      "@utils/*": ["utils/*"],
      "@lib/*": ["lib/*"],
      "@database/*": ["database/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
      "@controllers/*": ["controllers/*"],
      "@repositories/*": ["repositories/*"],
      "@shared/*": ["shared/*"]
    }
  }
}
