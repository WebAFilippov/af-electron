{
  "extends": ["@electron-toolkit/tsconfig/tsconfig.node.json"],
  "include": ["electron.vite.config.*", "src/main/**/*"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    /* Alias */
    "baseUrl": "./src/main",
    "paths": {
      "@handlers/*": ["handlers/*"],
      "@libs/*": ["libs/*"],
      "@types_app/*": ["types_app/*"],
      "@utils/*": ["utils/*"],
    },
  }
}