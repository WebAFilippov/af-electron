{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*"],
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/main/app/*"],
      "@ipc/*": ["src/main/ipc/*"],
      "@utils/*": ["src/main/utils/*"],
      "@lib/*": ["src/main/lib/*"],
      "@database/*": ["src/main/database/*"],
      "@models/*": ["src/main/database/models/*"],
      "@services/*": ["src/main/database/services/*"],
      "@controllers/*": ["src/main/database/controllers/*"],
      "@repositories/*": ["src/main/database/repositories/*"],
      "@shared/*": ["src/main/shared/*"]
    }
  }
}
