{
  "extends": ["@electron-toolkit/tsconfig/tsconfig.node.json"],
  "include": ["electron.vite.config.*", "src/main/**/*"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    /* Alias */
    "baseUrl": "./src/main",
    "paths": {
      "@/*": ["/*"],
      "@ui/*": ["ui/*"],
      "@types_app/*": ["types_app/*"],
      "@ipc/*": ["ipc/*"],
      "@utils/*": ["utils/*"],
      "@database/*": ["database/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
      "@repositories/*": ["repositories/*"],
      "@shared/*": ["shared/*"],
    },
  }
}
